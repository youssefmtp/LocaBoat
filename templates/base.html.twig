<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}LocaBoat{% endblock %}</title>
        <link rel="icon" class="iconUrl" href="{{ asset('assets/img/logo.png') }}"/>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
            <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {# navbar #}
            {% block navbar %}
            <nav class="navbar navbar-expand-lg  navbar-custom">
                <div class="container-fluid">
                    <img src="{{ asset('assets/img/logoblanc.png') }}" alt="Logo - LocaBoat" class="imgLogo">



                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active linkG" aria-current="page" href="/">Accueil</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active linkG" aria-current="page" href="/location">Location</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active linkG" aria-current="page" href="/contact">Contact</a>
                            </li>  
                        </ul>

                        <form class="d-flex">

                            {# espace de connexion #}
                            {% if app.user %}
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a href="/moncompte/{{app.user.id}}" class="nav-link active btnCompte"> <i class="fa-solid fa-user iconU"></i> Mon Compte</a>
                                </li>

                                <li class="nav-item">
                                    <a href="/deconnexion" class="nav-link active btnConnexion"><i class="fa-solid fa-right-to-bracket iconU"></i> Déconnexion</a>
                                </li>
                            </ul>

                            {% else %}
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a href="/connexion" class="nav-link active btnConnexion"><i class="fa-regular fa-user iconU"></i> Se connecter</a>
                                </li>
                            </ul>
                            {% endif %}

                        </form>
                    </div>
                </div>
            </nav> {# fin navbar #}
            {% endblock %}

            {# slider #}
            {% block slider %}
            {% endblock %}

            {# contenu #}
            {% block content %}
            
            {% endblock %}

            {# footer #}
            {% block footer %}
                <footer class="mt-5 bg-dark py-4 text-center">
                    <p class="pFooter">Copyright © 2023 LocaBoat - Tous droits réservés</p>
                </footer>
            {% endblock %}



           
    </body>
</html>
